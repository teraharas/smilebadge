<h1>文言登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@mongon) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label "区分" %>
      <%= f.number_field :kubun %>
      
      <%= f.label "文言" %>
      <%= f.text_area :content %>

      <%= f.submit "文言登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>