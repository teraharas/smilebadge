%body
  %header
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-inner
          .navbar-header
            %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to root_path do
              %span#logo
                SMILE Badge!!
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              - unless logged_in?
                - if !User.exists?(adminflg: true)
                  %li= link_to "管理者", adminpage_path
                %li= link_to "ログイン", login_path
                %li
                  = link_to help_path do
                    %span.minihelp= image_tag asset_path "help.png"
              - else
                %li
                  = link_to users_path, :class => "badge_send_button_header" do
                    %span.minismile= image_tag asset_path "smile.png"
                    バッジを贈る！！
                %li
                  = link_to badgeposts_sending_path do
                    %i.fa.fa-paper-plane-o
                    贈った
                %li
                  = link_to badgeposts_recepting_path do
                    %i.fa.fa-gift
                    もらった
                %li
                  = link_to ranking_path do
                    %i.fa.fa-list-ol
                    .visible_mini_device
                      ランキング
                %li.dropdown
                  %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                    %span.gravatar
                      .smallimage
                        - if current_user.image?
                          = image_tag current_user.image.url
                        - else
                          = image_tag 'user_noimage.gif'
                    = current_user.name
                    %span.caret
                  %ul.dropdown-menu
                    %li
                      = link_to current_user do
                        %i.fa.fa-user.fa-fw
                        マイページ
                    %li
                      = link_to edit_user_path(current_user) do
                        %i.fa.fa-cog.fa-fw
                        設定
                    %li.divider{:role => "separator"}
                    %li
                      = link_to help_path do
                        %span.minihelp
                          = image_tag asset_path "help.png"
                          ヘルプ
                          - if logged_in? && logged_in_adminuser?
                            = "・管理"
                    %li.divider{:role => "separator"}
                    %li
                      = link_to logout_path, method: "delete" do
                        %i.fa.fa-sign-out
                        ログアウト
