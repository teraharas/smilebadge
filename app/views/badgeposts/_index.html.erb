<% provide(:title, 'バッジやりとり一覧') %>

<%= javascript_include_tag 'balloon' %>

<%#= render badgeposts, type: type %>

<div class="container-fluid">
	<div class="row">
		<% badgeposts.each do |badgepost| %>
			<div class="col-md-6">
				<%= render badgepost, type: type %>
			</div>
		<% end %>
	</div>
</div>

<script>
// ユーザーの画像に一言メッセージをポップアップ
$(".gravatarsent_<%= type %>").balloon({ position: "right", offsetX: 0, offsetY: -30 });
$(".gravatarrecept_<%= type %>").balloon({ position: "right", offsetX: 0, offsetY: -30 });
</script>
