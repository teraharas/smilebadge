<h1>会員登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
 
      <%= f.label "部門名" %>
      <%= f.collection_select(:bumon_id, Bumon.where(activeflg: true).order(:outputnumber), :id, :name) %>
      
      <%= f.label "氏名" %>
      <%= f.text_field :name %>
      
      <%= f.label "ふりがな" %>
      <%= f.text_field :kananame %>

      <%= f.label "メールアドレス" %>
      <%= f.email_field :email %>

      <%= f.label "パスワード" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "会員登録実行！", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>