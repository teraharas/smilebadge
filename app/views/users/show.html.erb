<div class="profile_show">
  <h3>
    <% unless current_user?(@user) %>
      <%= link_to new_badgepost_path(recept_user_id: @user.id) do %>
        <strong><span class="minismile"><%= image_tag asset_path "smile.png" %></span><%= @user.name %>さんにバッジを贈る！！</strong>
      <% end %>
    <% end %>
  </h3>
  
  <div class="users">
    <% if current_user?(@user) || logged_in_adminuser? %>
    <!--自分自身か、管理者ユーザーは編集OK-->
      <div class="edit_profile"><%= link_to "プロフィール・パスワードの編集" , edit_user_path(@user) %></div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      
      <div class="name_block">
        <p class="bumon_name"><%= @user.bumon.name %></p>
        
        <p class="kananame"><%= @user.kananame %></p>
        
        <p class="name"><strong><%= @user.name %></strong></p>
        
        <p class="nickname">ニックネーム：<strong><span class="nicknamevalue"><%= @user.nickname %></span></strong></p>
        
        <p class="email">メールアドレス：<%= @user.email %></p>
      </div>
      
    </div>
      
    <div class="col-md-4">
      
      <section class="user_info">
        <p class="gravatar">
          <% if @user.image? %>
            <div class="largeimage" style="background-image: url(<%= @user.image.url %>);">
              <% unless current_user?(@user) %>
                <%= link_to image_tag('empty.gif'), new_badgepost_path(recept_user_id: @user.id) %>
              <% end %>
            </div>
          <% else %>
            <div class="largeimage" style="background-image: url(<%= asset_path "user_noimage.gif" %>);">
              <% unless current_user?(@user) %>
                <%= link_to image_tag('empty.gif'), new_badgepost_path(recept_user_id: @user.id) %>
              <% end %>
            </div>
          <% end %>
        </p>
        <p class="message"><strong><%= @user.message %></strong></p>
      </section>
      
      <div class="catchphrase">
          <p>キャッチフレーズ</p>
          <hr>
          <span><strong><%= @user.catchphrase %></strong></span>
      </div>
    </div>

    <br/>

    <div class="col-md-4">
      <div class="myrule">
        <p><strong>好きな言葉・座右の銘・マイルール</strong></p>
        <hr>
        <span><%= simple_format(h(@user.myword)) %></span>
      </div>
    </div>


    <div class="col-md-4">
      <div class="hobby">
        <p><strong>趣味</strong></p>
        <hr>
        <span><%= simple_format(h(@user.hobby)) %></span>
      </div>
    </div>
      
  </div>
  
  <br/>
  
  <!--獲得したバッジグラフ表示-->
  <%= high_chart("radar1", @graph_recept30days) %>
  <br/>
  
  <!--獲得したバッジグラフ表示-->
  <%= high_chart("radar2", @graph_recept) %>
  <br/>
  
  <!--贈ったバッジグラフ表示-->
  <%= high_chart("radar3", @graph_sent) %>

</div>