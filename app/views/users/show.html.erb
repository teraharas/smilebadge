<div class="profile_show">
  <p class="badgesendlink">
    <% unless current_user?(@user) %>
      <%= link_to new_badgepost_path(recept_user_id: @user.id) do %>
        <b><span class="minismile"><%= image_tag asset_path "smile.png" %></span>
        <span class="username"><%= @user.name %></span>さんにバッジを贈る！！</b>
      <% end %>
    <% end %>
  </p>
  
  <div class="users">
    <% if current_user?(@user) || logged_in_adminuser? %>
    <!--自分自身か、管理者ユーザーは編集OK-->
      <div class="edit_profile"><i class="fa fa-cog fa-fw"></i><%= link_to "プロフィール・パスワードの編集" , edit_user_path(@user) %></div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col-md-4">
      
      <div class="name_block">
        <p class="bumon_name"><%= @user.bumon.name %></p>
        
        <p class="kananame"><%= @user.kananame %></p>
        
        <p class="name"><b><%= @user.name %></b></p>
        
        <p class="nickname">ニックネーム：<b><span class="nicknamevalue"><%= @user.nickname %></span></b></p>
        
        <p class="email">メールアドレス：<%= @user.email %></p>
      </div>
      
    </div>
      
    <div class="col-md-4">
      
      <section class="user_info">
        <p class="gravatar">
          <% if @user.image? %>
            <div class="largeimage" style="background-image: url(<%= @user.image.url %>);">
              <% unless current_user?(@user) %>
                <%= link_to image_tag('empty.gif'), new_badgepost_path(recept_user_id: @user.id) %>
              <% end %>
            </div>
          <% else %>
            <div class="largeimage" style="background-image: url(<%= asset_path "user_noimage.gif" %>);">
              <% unless current_user?(@user) %>
                <%= link_to image_tag('empty.gif'), new_badgepost_path(recept_user_id: @user.id) %>
              <% end %>
            </div>
          <% end %>
        </p>
        <p class="message"><b><%= @user.message %></b></p>
      </section>
      
      <div class="myjob">
          <p><b>こんな仕事をしています</b></p>
          <hr>
          <span><%= simple_format(h(@user.myjob)) %></span>
      </div>
    </div>

    <br/>

    <div class="col-md-4">
      <div class="myrule">
        <p><b>好きな言葉・座右の銘・マイルール</b></p>
        <hr>
        <span><%= simple_format(h(@user.myword)) %></span>
      </div>
    </div>


    <div class="col-md-4">
      <div class="hobby">
        <p><b>趣味</b></p>
        <hr>
        <span><%= simple_format(h(@user.hobby)) %></span>
      </div>
    </div>
      
  </div>
  
  <br/>
  <!--過去30日間に獲得したバッジグラフ表示-->
  <%= high_chart("radar1", @graph_recept30days) %>
  
  <!--今までに獲得したバッジグラフ表示-->
  <%= high_chart("radar2", @graph_recept) %>
  
  <!--今までに贈ったバッジグラフ表示-->
  <%= high_chart("radar3", @graph_sent) %>  

</div>