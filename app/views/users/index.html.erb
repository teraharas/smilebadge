<% provide(:title, '全メンバー') %>
<h1>ホメるメンバーを選んでね！</h1>

<h2>全メンバー (<%= @users.count %>)</h2>

<div class="row">
  <div class="col-md-12">
    <section>
      <% if @users.any? %>
            <ol class="users">
              <% @users.each do |user| %>
                    <li>
                      <span class="gravatar">
                        <% if user.image? %>
                          <%= link_to image_tag(user.image.url, {:size => '50x50'}), new_badgepost_path(recept_user_id: user.id) %>
                        <% else %>
                          <%= link_to image_tag('user_noimage.gif', {:size => '50x50'}), new_badgepost_path(recept_user_id: user.id) %>
                        <% end %>
                      </span>
                      <span class="user"><strong><%= link_to user.name, new_badgepost_path(recept_user_id: user.id) %></strong></span>
                      <br/>
                      <span><%= user.catchphrase %></span>
                      <br/>
                      <%= link_to user.name + " のプロフィールを見る！", user %>
                    </li>
              <% end %>
            </ol>
      <% end %>
    </section>
  </div>
</div>
