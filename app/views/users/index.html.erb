<% provide(:title, '全メンバー') %>
<h1>バッジを贈るメンバーを選んでね！</h1>

<h2>全メンバー (<%= @users.count %>)</h2>

<div class="row">
  <div class="col-md-12">
    <section>
      <% if @users.any? %>
        <ol class="users">
          <% @users.each do |user| %>
            <li>
              <span class="gravatar">
                <div class="middleimage">
                <% if user.image1? %>
                  <%= link_to image_tag(user.image1.url), new_badgepost_path(recept_user_id: user.id) %>
                <% else %>
                  <%= link_to image_tag('user_noimage.gif'), new_badgepost_path(recept_user_id: user.id) %>
                <% end %>
                </div>
              </span>
              <span class="user"><strong><%= link_to user.name, new_badgepost_path(recept_user_id: user.id) %></strong></span>
              <br/>
              <span><%= user.bumon.name %></span>
              <br/>
              <%= link_to user.name + " のプロフィールを見る！", user %>
            </li>
          <% end %>
        </ol>
      <% end %>
    </section>
  </div>
</div>
