        else if(i == 7)
          $("#login").css("background-image","url(<%= asset_path "background/7.jpg" %>)");
        else if(i == 8)
          $("#login").css("background-image","url(<%= asset_path "background/8.jpg" %>)");
        else if(i == 9)
          $("#login").css("background-image","url(<%= asset_path "background/9.jpg" %>)");
        else if(i == 10)
          $("#login").css("background-image","url(<%= asset_path "background/10.jpg" %>)");
      i++;
    }, 10000
  );
});
</script>
